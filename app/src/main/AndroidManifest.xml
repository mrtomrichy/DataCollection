<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.tomrichardson.datacollection"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION"/>
    <uses-permission android:name="android.permission.READ_SMS"/>

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="Rush_debug"
            android:value="true"/>

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".service.location.LocationService"
            android:enabled="true"
            android:exported="false"
            android:process=":location_service">
        </service>

        <service
            android:name=".service.activity.ActivityService"
            android:enabled="true"
            android:exported="false"
            android:process=":activity_service">
        </service>

        <service
            android:name=".service.textmessage.TextMessageService"
            android:enabled="true"
            android:exported="false"
            android:process=":text_service">
        </service>

        <service
            android:name=".service.activity.DetectedActivitiesIntentService"
            android:exported="false" />

        <activity
            android:name=".ui.DataViewActivity"
            android:label="@string/title_activity_data_view"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
